@model SilentAuction.Models.Listing

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Listing</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.MinimumBid)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MinimumBid)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Increment)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Increment)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Auction)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Auction)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item)
        </dd>
    </dl>
</div>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Bid Now</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">First Name:</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">Last Name:</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">Email:</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Phone Number:</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">Bid Amount:</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Place Bid" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-controller="Auctions" asp-action="SilentAuction" asp-route-id="@(Model.AuctionId)">Return to Listings</a>
</div>
