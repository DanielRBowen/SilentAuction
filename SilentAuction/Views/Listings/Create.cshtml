@using SilentAuction.ViewModels
@model ListingViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Listing</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Auction" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Auction" class ="form-control" asp-items="Model.Auctions">Auction:</select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Item" class="col-md-2 control-label">Item:</label>
            <div class="col-md-10">
                <select asp-for="Item" class ="form-control" asp-items="Model.Items"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MinimumBid" class="col-md-2 control-label">Minimum Bid:</label>
            <div class="col-md-10">
                <input asp-for="MinimumBid" class="form-control" />
                <span asp-validation-for="MinimumBid" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Increment" class="col-md-2 control-label">Bidding Increment:</label>
            <div class="col-md-10">
                <input asp-for="Increment" class="form-control" />
                <span asp-validation-for="Increment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
