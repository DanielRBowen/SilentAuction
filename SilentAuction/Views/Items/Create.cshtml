@model SilentAuction.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SponsorId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SponsorId" class="form-control" asp-items="ViewBag.SponsorId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RetailPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RetailPrice" class="form-control" />
                <span asp-validation-for="RetailPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OfferExpires" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="OfferExpires" class="form-control" />
                <span asp-validation-for="OfferExpires" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Terms" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Terms" class="form-control" />
                <span asp-validation-for="Terms" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <div class="col-md-offset-0 col-md-10">
                    <input asp-action="Create" type="submit" value="Add Picture" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
