@model IEnumerable<SilentAuction.Models.Auction>
@{
    ViewData["Title"] = "Silent Auction";
}

<h2>Silent Auction Home</h2>

<!-- List of all the auctions -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Auction Id:
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-controller="Auction" asp-action="SilentAuction" asp-route-id="@item.Id">Auction Page</a>
                </td>
            </tr>
        }
    </tbody>
</table>
